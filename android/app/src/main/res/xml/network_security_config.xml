<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development (Metro bundler) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- AWS domains should use HTTPS with proper certificate validation -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">amazonaws.com</domain>
        <domain includeSubdomains="true">cognito-identity.eu-west-1.amazonaws.com</domain>
        <domain includeSubdomains="true">cognito-idp.eu-west-1.amazonaws.com</domain>
        <domain includeSubdomains="true">rekognition.eu-west-1.amazonaws.com</domain>
        <domain includeSubdomains="true">s3.eu-west-1.amazonaws.com</domain>
        <domain includeSubdomains="true">sts.eu-west-1.amazonaws.com</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
    
    <!-- API domain should use HTTPS -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">dev-fraud-api.datamellonai.com</domain>
    </domain-config>
    
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>